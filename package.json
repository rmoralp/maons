{
  "name": "maons",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "version": "0.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "phoenix": "rm -rf ./node_modules && rm -f ./package-lock.json && npm install --legacy-peer-deps --no-audit --no-fund"
  },
  "devDependencies": {
    "@maons/lint": "*",
    "lerna": "6.3.0",
    "turbo": "latest"
  },
  "packageManager": "npm@9.2.0",
  "prettier": "@maons/lint/.prettierrc.js"
}
