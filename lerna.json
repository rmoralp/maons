{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore: Release packages [skip ci]"
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/node_modules/**",
    "**/*.md"
  ],
  "useWorkspaces": true,
  "version": "independent"
}
